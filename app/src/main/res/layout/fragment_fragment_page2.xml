<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.fragment_page2">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FILTER"
        android:id="@+id/groupsearch"

        android:layout_gravity="left|top"
        android:layout_below="@+id/spinner"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="399dp"
        android:id="@+id/list2"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/groupsearch"
        android:layout_toEndOf="@+id/groupsearch"
        android:layout_below="@+id/textView7">

    </ListView>

    <Spinner
        android:layout_width="176dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="right|top"
        android:entries="@array/departments_array"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/textView7"
        android:layout_toStartOf="@+id/textView7"
        android:textAlignment="center" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reload"
        android:id="@+id/reloadbutton"

        android:layout_below="@+id/groupsearch"
        android:layout_alignLeft="@+id/groupsearch"
        android:layout_alignStart="@+id/groupsearch"
        android:layout_toLeftOf="@+id/list2"
        android:layout_toStartOf="@+id/list2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Squads"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />
</RelativeLayout>
