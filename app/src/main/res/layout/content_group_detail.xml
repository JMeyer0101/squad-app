<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mars.httpapp.GroupDetailActivity"
    tools:showIn="@layout/activity_group_detail">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/classNumberTextView"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginLeft="68dp"

        android:layout_marginStart="68dp"
        android:layout_alignTop="@+id/classTextView"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/classTextView"
        android:textColor="@color/white"
        android:textSize="25dp"

        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/classNumberTextView"
        android:layout_toStartOf="@+id/classNumberTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date:"
        android:textColor="@color/white"
        android:id="@+id/textView6"
        android:layout_marginTop="41dp"
        android:phoneNumber="false"
        android:layout_below="@+id/classTextView"
        android:layout_alignRight="@+id/classTextView"
        android:layout_alignEnd="@+id/classTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/dateTextView"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/classNumberTextView"
        android:layout_alignStart="@+id/classNumberTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time:"
        android:textColor="@color/white"
        android:id="@+id/textView8"
        android:layout_marginTop="39dp"
        android:phoneNumber="false"
        android:layout_below="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description:"
        android:textColor="@color/white"
        android:id="@+id/textView9"
        android:layout_marginTop="37dp"
        android:phoneNumber="false"
        android:layout_below="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/timeTextView"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignLeft="@+id/dateTextView"
        android:layout_alignStart="@+id/dateTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/descriptionTextView"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/timeTextView"
        android:layout_alignStart="@+id/timeTextView" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:id="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_alignEnd="@+id/relativeLayout1"

        >

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Group"
        android:id="@+id/joingroupbutton"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Group"
        android:id="@+id/leavegroupbutton"
        android:layout_alignTop="@+id/joingroupbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">
        <ScrollView
            android:id="@+id/SCROLLER"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:scrollbars="vertical"
            android:background="#e5e5e5">



    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/commentsview"

        android:background="#e5e5e5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        </ScrollView>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sendcomment"


        android:background="#e0e1c6"
        android:layout_alignLeft="@+id/sendcommentbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/sendcommentbutton"
        android:layout_toStartOf="@+id/sendcommentbutton"
        android:layout_below="@+id/SCROLLER"
        android:layout_marginTop="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:id="@+id/sendcommentbutton"

        android:layout_alignBaseline="@+id/sendcomment"
        android:layout_alignBottom="@+id/sendcomment"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>
